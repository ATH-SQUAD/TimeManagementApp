@page
@model TimeManagementApp.Pages.TimeManagement.UserPanel.ZmienHasloModel
@{
    ViewData["Title"] = "ChangePW";
    Layout = "~/Pages/Shared/_MainLayout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/Styles/TimeManagement/ChangePW.css" type="text/css" />
}
@section Scripts {
    <script src="~/Scripts/TimeManagement/ChangePW.js" type="text/javascript"></script>
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@inject Microsoft.AspNetCore.Identity.UserManager<TimeManagementApp.Database.Models.ApplicationUser> UserManager


<section class="hold-transition register-page justify-content-start">
    <div class="register-box">
        <div class="register-logo mt-5">
            <a href="../../index2.html"><b>Zmień hasło</b></a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">

                <form method="post">
                    <div class="form-group">
                        <label asp-for="PasswordModel.OldPassword">Obecne hasło</label>
                        <input asp-for="PasswordModel.OldPassword" class="form-control" />
                        <span asp-validation-for="PasswordModel.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordModel.NewPassword">Nowe hasło</label>
                        <input asp-for="PasswordModel.NewPassword" class="form-control" />
                        <span asp-validation-for="PasswordModel.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordModel.ConfirmPassword">Potwierdz nowe hasło</label>
                        <input asp-for="PasswordModel.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="PasswordModel.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" asp-page-handler="OnPostAsync" value="Save" class="btn btn-success" />
                        <input type="button" class="btn btn-danger" onclick="history.go(-1)" value="Anuluj" />
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>

